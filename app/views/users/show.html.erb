<h1><%= @user.name %></h1>
<% if logged_in? %>
  <% @current_user = User.find(session[:user_id]) %>
  <% if @current_user == @user %>
    <h5><%= @user.email %></h5>
    <h6><%= link_to "Edit Profile", edit_user_path %></h6>
    <h6><%= link_to "New meal", new_meal_path %></h6>
    <h6><%= link_to 'Delete user!', @user, method: :delete %></h6>
<ul>
  <li><%= @user.height %></li>
  <li><%= @user.weight %></li>
  <li><%= @user.trgwt %></li>
</ul>


  <% end %>
<% end %>


<% @user.meals.each do |m| %>
  <h3><%= m.meal_type %></h3>
  <% if logged_in? %>
    <% @current_user = User.find(session[:user_id]) %>
    <% if @current_user == @user %>
      <h6><%= link_to("Edit Meal", edit_meal_path(m.id)) %></h6>
    <% end %>
  <% end %>
  <% m.foods.each do |f| %>
  <%= f.name %>
  <%= f.sugar %>
  <%= f.cals %>
  <% end %>

<% end %>





